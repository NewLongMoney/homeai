{
  "compilerOptions": {
    "target": "esnext",
    "module": "node16",
    "lib": ["es2019", "dom"],
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "node16",
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"]
    },
    "noEmit": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ],
  "include": [
    "src/**/*",
    "App.tsx"
  ]
} 